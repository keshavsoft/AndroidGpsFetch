<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Forced Light Mode) -->
    <style name="Theme.GpsFetch" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Disable dark mode system override -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.GpsFetch.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fix: Remove invalid ActionBar overlay and use ThemeOverlay.MaterialComponents.Light -->
    <style name="Theme.GpsFetch.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.GpsFetch.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
